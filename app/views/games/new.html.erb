<div class="container">
  <h1>NEW GAME</h1>
  <div class="row mb-5">
    <% @letters.each do |letter| %>
      <div class="col-1 p-3 m-2 bg-primary text-white" style="text-align: center"> <%= letter %> </div>
    <% end %>
  </div>
  <form action="/score" data-turbo="false">
    <label for="word">What is the longest word you can find?</label>
    <div class="d-flex">
      <input class="form-control" type="text" name="word">
      <input class="btn btn-primary" type="submit" value="Play!">
    </div>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters.join(',') %>
  </form>
</div>
